<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ateam.com.clean.Certificate.Certificate">

<LinearLayout
    android:id="@+id/view"
    android:background="@drawable/customborder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Certificate of Appreciation"
        android:textAlignment="center"
        android:textColor="#008975"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/appicon" />

    <TextView
        android:id="@+id/certificate_user"
        android:layout_width="364dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:fontFamily="@font/arizonia"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#008975"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/certificate_type"
        android:text="On Completion of 100 Reports"
        android:textAlignment="center"
        android:textColor="#008975"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/certificate_text"
        android:textColor="#008975"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/certificate_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />
  </LinearLayout>
</LinearLayout>
